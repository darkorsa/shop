{
    "name": "darkorsa/shop",
    "type": "library",
    "description": "Flexible shop package including stock validation, discounts, price formats, etc.",
    "keywords": [
        "darkorsa",
        "shop"
    ],
    "homepage": "https://github.com/darkorsa/shop",
    "license": "MIT",
    "authors": [
        {
            "name": "Dariusz Korsak",
            "email": "dkorsak@gmail.com",
            "homepage": "",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "darkorsa\\shop\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "darkorsa\\shop\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
